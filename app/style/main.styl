@import 'rupture'
@import './mixins/mixin.styl'
@import './fonts.styl'

// Adaptive
flex-version = flex
support-for-ie = false
vendor-prefixes = official

rupture.scale =       0    576px    768px    992px    1200px
rupture.scale-names =  'xs'     'sm'     'md'     'lg'      'xl'

//normalize
*
	padding 0
	margin 0
	box-sizing: border-box
	&::after
		padding 0
		margin 0
		box-sizing: border-box
	&::before
		padding 0
		margin 0
		box-sizing: border-box

a
	display block
	text-decoration none
	color inherit

	&:hover
		color inherit
		text-decoration none

button:focus,
textarea:focus,
input:focus
	outline none
	box-shadow none

html
	font-size 16px

body
	line-height 1.5
	font-family defFont
	color: bsColor
	size 100%
	//background-image resolve('1.jpg')

.visually-hidden
	position absolute
	clip rect(0 0 0 0)
	width 1px
	height 1px
	margin -1px

//изменение ширины сетки
.container
	+above(xl)
		max-width 1140px